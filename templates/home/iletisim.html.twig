{% extends 'base.html.twig' %}

{% block title %} İletişim - {{ data[0].title }}{% endblock %}
{% block keywords %} {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }}{% endblock %}
{% block stylesheets %}

{% endblock %}

{% block content %}
    <div class="col-sm-12">
        <h2 class="title text-center"><strong>İletişim</strong></h2>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="contact-form">
                <h2 class="title text-center">Bize Yazın</h2>
                {{ include('messages.html.twig') }}
                <div class="status alert alert-success" style="display: none"></div>
                <form action="" id="main-contact-form" class="contact-form row" name="messages" method="post">
                    <div class="form-group col-md-6">
                        <input type="text" name="messages[name]" class="form-control" required="required" placeholder="Ad Soyad">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="email" name="messages[email]" class="form-control" required="required" placeholder="Email">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" name="messages[subject]" class="form-control" required="required" placeholder="Konu">
                    </div>
                    <div class="form-group col-md-12">
                        <textarea id="messages" name="messages[messages]" class="form-control" rows="8" placeholder="Buraya Mesajınızı yazabilirsiniz"></textarea>
                    </div>
                    <input type="hidden" value="New" name="messages[status]" class="form-control" required="required" placeholder="Konu">
                    <div class="form-group col-md-12">
                        <input type="hidden" name="token" value="{{ csrf_token('form-messages') }}" />
                        <input type="submit" name="" class="btn btn-primary pull-right" value="Mesajı Gönder">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="contact-info">
                <h2 class="title text-center">Contact Info</h2>
                <address>
                    <p>{{ data[0].company|raw }}.</p>
                    <p>{{ data[0].address|raw }}</p>
                    <p>Mobile: {{ data[0].phone|raw }}</p>
                    <p>Email: {{ data[0].email|raw }}</p>
                </address>
                <div class="social-networks">
                    <h2 class="title text-center">Social Networking</h2>
                    <ul>
                        <li>
                            <a href="https://www.facebook.com/ahmetcan.yuce.7"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li>
                            <a href="https://twitter.com/Ahmtcn777"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li>
                            <a href="https://www.linkedin.com/in/ahmet-can-y%C3%BCce-56232a146/"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
