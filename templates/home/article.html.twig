{% extends 'base.html.twig' %}

{% block title %} {{ article[0].title }} {% endblock %}
{% block keywords %} {{ article[0].keywords }} {% endblock %}
{% block description %} {{ article[0].description }}{% endblock %}

{% block sidebar %} {% include 'home/_sidebar.html.twig' %} {% endblock %}
{% block content %}
    <div class="col-sm-9">
        <div class="blog-post-area">
            <h2 class="title text-center">{{ article[0].title|raw }}</h2>
            <div class="single-blog-post">
                <h3>{{ article[0].title|raw }}</h3>
                <a href="">
                    <img src="{{ asset('uploads') }}/images/{{ article[0].image }}" alt="">
                </a>
                {{ article[0].detail|raw }}
                {% for image in gallery %}
                    <img src="{{ asset('uploads') }}/images/{{ image.image }}" width="750" height="400" /><br><br>
                {% endfor %}
                <div class="post-meta">
                    <ul>
                        <li><i class="fa fa-user"></i>
                            {% for user in users %}
                                {% if article[0].userid == user.id %}
                                    {{ user.name }}
                                {% endif %}
                            {% endfor %}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
