
<h1>Create new Image(GALLERY)</h1>

{% block body %}
    <form action="{{ path('blog_gallery_add',{'aid': aid}) }}" method="post" enctype="multipart/form-data">
        Select image to upload:
        <input name="productid" type="hidden" value="{{ aid }}" type="number" readonly>
        <input type="file" name="imagename" id="fileToUpload"><br>
        <input type="submit" value="Upload Image" name="submit">
    </form>
    {% for image in imagelist %}
        <img src="{{ asset('uploads') }}/images/{{ image.image }}" height="150" width="150">
    {% endfor %}
{% endblock %}