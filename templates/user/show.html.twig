{% extends 'adminbase.html.twig' %}

{% block title %}Üye Detay{% endblock %}

{% block content %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Üye Detay</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{% for roles in user.roles %}
                                    {{ roles }},
                                {% endfor %}
                            </td>
                        </tr>

                        <tr>
                            <th>Status</th>
                            <td>{{ user.status }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-block btn-outline-info btn-rounded btn-sm">Düzenle</a><br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}