
    <h1>Create new Image(GALLERY)</h1>

    {{ include('admin/image/_form.html.twig') }}

{% for image in imagelist %}
    <img src="{{ asset('uploads') }}/images/{{ image.image }}" height="150" width="150">
    <form method="post" action="{{ path('admin_image_delete', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
        <button class="btn">Delete</button>
    </form>
{% endfor %}