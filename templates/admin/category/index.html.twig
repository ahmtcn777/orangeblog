{% extends 'adminbase.html.twig' %}

{% block title %}Kategoriler{% endblock %}

{% block content %}
    {{ include('admin/messages.html.twig') }}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategoriler</h4>
                <a href="{{ path('admin_category_new') }}" class="btn btn-outline-primary btn-rounded btn-fw">Yeni Kategori Ekle</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Parentid</th>
                            <th>Title</th>
                            <th>Keywords</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Görüntüle</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.parentid }}</td>
                                <td>{{ category.title }}</td>
                                <td>{{ category.keywords }}</td>
                                <td>{{ category.description }}</td>
                                <td>{{ category.status }}</td>
                                <td>
                                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-outline-success btn-rounded btn-sm">Görüntüle</a>
                                </td>
                                <td>
                                    <a href="{{ path('admin_category_edit', {'id': category.id, 'pid':category.parentid}) }}" class="btn btn-outline-info btn-rounded btn-sm">Düzenle</a>
                                </td>
                                <td>
                                    {{ include('admin/category/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
